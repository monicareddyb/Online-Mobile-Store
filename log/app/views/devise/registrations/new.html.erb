<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&nbsp;&nbsp;
    <%= f.email_field :email, autofocus: true, class: "color1" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" , class: "color1" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>&emsp;&emsp;&emsp;&emsp;&nbsp;&nbsp;
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "color1" %>
  </div>

  <div class="actions">
  <br>
    <%= f.submit "Sign up" ,  class: "btn btn-primary"%>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
