        <a href="#" class="navbar-brand">Mobile<span style="color:#7cfc00">WORLD</span></a>
    </div>
    <div id="navbarCollapse" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
			<li class="<%= is_active?('/products') %>"><%= link_to 'Shop Now', products_path %></li>
