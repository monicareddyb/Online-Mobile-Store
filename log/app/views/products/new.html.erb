<h1>New Product</h1>

<%= form_for :product, url: products_path , :html => {:class => "form-horizontal "} do |p| %>
	<% if @product %>
	<% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% end %>
  

<div class="center">
	<div class="form-group">
		<%= p.label :productId ,"Product ID:" , class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :productId , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :quantity, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :quantity , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :name, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :name , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :price, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :price , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :modelNumber, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :modelNumber , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :make, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :make , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :color, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :color , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :storage, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :storage , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :os, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :os , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :specification, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.text_field :specification , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.label :image, class: "col-md-3 control-label"%>
		<div class="col-xs-3">
		<%= p.file_field :image , class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= p.submit "Submit", class: "btn btn-primary"%>
		<%= link_to 'Back', products_path , :class => "btn btn-warning"%>		
	</div>	
	</div>	
<% end %>	
